{
	"extends": "airbnb",
	"rules": {
		"indent": ["error", "tab"],
		"react/jsx-indent": ["error", "tab"],
		"react/jsx-indent-props": ["error", "tab"],

		"linebreak-style": 0,
		"no-tabs": 0,
		"no-plusplus": 0,
		"class-methods-use-this": 0,
		"eol-last": 0,

		"prefer-destructuring": ["error", {
			"array": false,
			"object": false
		}, {
			"enforceForRenamedProperties": false
		}],

		"jsx-a11y/href-no-hash": "off",
		"jsx-a11y/anchor-is-valid": ["warn", {
			"aspects": ["invalidHref"]
		}]
	},
	"globals": {
		"$": true,
		"document": true,
		"navigator": true,
		"window": true,
		"FileReader": true
	}
}
